@model IEnumerable<ProyectoModuloTresTiendaOnline.Models.Producto>
@{
    ViewData["Title"] = "Home Page";
}
@{ 
    Random rnd = new Random();
}
<div class="text-center">
    <h1>CAMISETAS DE FUTBOL OFICIALES</h1>
    <div id="carouselExampleSlidesOnly" style="width:400px;height:450px;justify-content:center;margin:0 auto" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active" data-interval="2000">
                <img src="https://img01.ztat.net/article/spp-media-p1/c3646bab3a603498a1cbccfbf30cd38e/47d579cc89604742aca396bd34d9afbf.jpg?imwidth=1800&filter=packshot" class="d-block" style="width:400px;height:450px" alt="Imagen no disponible"/>
            </div>
            @foreach (var item in Model.OrderBy(x=> rnd.Next(1,50)))
            {
                <div class="carousel-item" data-interval="2000">
                    <img src="@item.Imagen" class="d-block" style="width:400px;height:450px" alt="Imagen no disponible">
                </div>
            }
        </div>
    </div>
    <h2>LAS MEJORES CAMISETAS AL MEJOR PRECIO</h2>
</div>
